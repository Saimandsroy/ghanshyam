@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap');

@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {

  /* -------------------------------------------------------------------------- */
  /*                            PREMIUM THEME SYSTEM                            */
  /* -------------------------------------------------------------------------- */

  /* Default Dark Mode (ATLAS Theme) */
  :root,
  :root.dark {
    /* Backgrounds */
    --background-dark: #050505;
    /* Jet Black (Deepest) */
    --card-background: rgba(30, 30, 30, 0.4);
    /* Glass Dark */
    --sidebar-background: #0A0A0A;
    /* Slightly lighter black */
    --input-background: rgba(255, 255, 255, 0.03);

    /* Borders */
    --border: rgba(255, 255, 255, 0.08);
    --border-hover: rgba(255, 140, 66, 0.3);
    /* Premium Orange Hover */

    /* Typography */
    --text-primary: #FFFFFF;
    --text-secondary: #888888;
    --text-muted: #555555;

    /* Accents (ATLAS Signature) */
    --primary-cyan: #FF8C42;
    /* Renamed var for compatibility, actually Orange */
    --primary-glow: rgba(255, 140, 66, 0.4);
    --bright-cyan: #FFAA70;
    /* Lighter Orange */
    --accent-gold: #D4AF37;

    /* Status Colors */
    --success: #00E676;
    /* Vibrant Green */
    --warning: #FFD700;
    /* Gold */
    --error: #FF453A;
    /* iOS Red */

    /* gradients */
    --gradient-primary: linear-gradient(135deg, #FF8C42 0%, #FF5500 100%);
    --gradient-glass: linear-gradient(180deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.0) 100%);
  }

  /* Royal Light Mode */
  :root.light {
    /* Backgrounds */
    --background-dark: #FAFAFA;
    /* Warm White / Paper */
    --card-background: #FFFFFF;
    /* Pure White Cards */
    --sidebar-background: #F4F4F5;
    /* Light Grey Sidebar */
    --input-background: #F4F4F5;

    /* Borders */
    --border: #E4E4E7;
    --border-hover: #D4AF37;
    /* Gold Hover */

    /* Typography */
    --text-primary: #18181B;
    /* Zinc 900 */
    --text-secondary: #52525B;
    /* Zinc 600 */
    --text-muted: #A1A1AA;

    /* Accents (Royal Gold) */
    --primary-cyan: #D4AF37;
    /* Metallic Gold */
    --primary-glow: rgba(212, 175, 55, 0.3);
    --bright-cyan: #E5C158;
    --accent-gold: #B8860B;
    /* Dark Goldenrod */

    /* Status Colors (Softer for Light Mode) */
    --success: #10B981;
    --warning: #F59E0B;
    --error: #EF4444;

    /* gradients */
    --gradient-primary: linear-gradient(135deg, #D4AF37 0%, #B8860B 100%);
    --gradient-glass: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.4) 100%);

    /* Overrides */
    --spacing-xs: 4px;
    --spacing-sm: 8px;
    --spacing-md: 16px;
    --spacing-lg: 24px;
    --spacing-xl: 32px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;
  }
}

@layer base {
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
    background-color: var(--background-dark);
    color: var(--text-primary);
    line-height: 1.6;
    -webkit-font-smoothing: antialiased;
    transition: background-color 0.3s ease, color 0.3s ease;
  }
}

@layer components {

  /* -------------------------------------------------------------------------- */
  /*                              GLASSMORPHISM UI                              */
  /* -------------------------------------------------------------------------- */

  .glass-panel {
    background: var(--card-background);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .glass-panel-hover:hover {
    border-color: var(--border-hover);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    background: linear-gradient(to bottom right, var(--card-background), rgba(255, 255, 255, 0.02));
  }

  /* -------------------------------------------------------------------------- */
  /*                            PREMIUM TABLE STYLES                            */
  /* -------------------------------------------------------------------------- */

  .premium-table-container {
    border-radius: var(--radius-xl);
    border: 1px solid var(--border);
    overflow: hidden;
    background: var(--card-background);
  }

  .premium-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
  }

  .premium-table thead th {
    background: rgba(0, 0, 0, 0.02);
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 1.25rem 1.5rem;
    text-align: left;
    border-bottom: 1px solid var(--border);
  }

  .premium-table tbody tr {
    transition: all 0.2s ease;
  }

  .premium-table tbody tr:hover {
    background-color: rgba(255, 255, 255, 0.03);
  }

  :root.light .premium-table tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.02);
  }

  .premium-table tbody td {
    padding: 1.25rem 1.5rem;
    color: var(--text-primary);
    border-bottom: 1px solid var(--border);
    font-size: 0.95rem;
  }

  .premium-table tbody tr:last-child td {
    border-bottom: none;
  }

  /* -------------------------------------------------------------------------- */
  /*                               PREMIUM BADGES                               */
  /* -------------------------------------------------------------------------- */

  .status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
  }

  .status-badge.success {
    background-color: rgba(0, 230, 118, 0.1);
    color: var(--success);
    border: 1px solid rgba(0, 230, 118, 0.2);
  }

  .status-badge.warning {
    background-color: rgba(255, 215, 0, 0.1);
    color: var(--warning);
    border: 1px solid rgba(255, 215, 0, 0.2);
  }

  .status-badge.error {
    background-color: rgba(255, 69, 58, 0.1);
    color: var(--error);
    border: 1px solid rgba(255, 69, 58, 0.2);
  }

  .status-badge.info {
    background-color: rgba(255, 140, 66, 0.1);
    color: var(--primary-cyan);
    border: 1px solid rgba(255, 140, 66, 0.2);
  }

  /* -------------------------------------------------------------------------- */
  /*                               PREMIUM INPUTS                               */
  /* -------------------------------------------------------------------------- */

  .premium-input {
    background: var(--input-background);
    border: 1px solid var(--border);
    color: var(--text-primary);
    border-radius: var(--radius-lg);
    padding: 0.75rem 1rem;
    transition: all 0.2s ease;
    width: 100%;
  }

  .premium-input:focus {
    outline: none;
    border-color: var(--primary-cyan);
    box-shadow: 0 0 0 3px var(--primary-glow);
  }

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  ::-webkit-scrollbar-track {
    background: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 3px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
  }
}

/* Animations */
@keyframes fadeIn {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(10px);
    opacity: 0;
  }

  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.animate-fadeIn {
  animation: fadeIn 0.4s ease-out;
}

.animate-slideUp {
  animation: slideUp 0.5s ease-out;
}

.animate-spin-very-slow {
  animation: spin 5s linear infinite;
}

/* Grid Background Utility */
.bg-grid-pattern {
  background-image: linear-gradient(to right, var(--border) 1px, transparent 1px),
    linear-gradient(to bottom, var(--border) 1px, transparent 1px);
  background-size: 40px 40px;
}